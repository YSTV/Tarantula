<?xml version="1.0" encoding="UTF-8"?>
<TarantulaPlugin>
    <PluginLoad>
        <Name>Fill Event Processor</Name>
        <Type>EventProcessor</Type>
        <Library>EventProcessor_Fill</Library>
        <Instance>Event Filler 1</Instance>
        <Description>Generates a series of events to fill a period or time, using a semi-random algorithm</Description>
        <Enabled>false</Enabled>
    </PluginLoad>
    <PluginData>
        <DBFile>datafiles/EventProcessor_Fill/filedata.db</DBFile>
        <FileWeight>2</FileWeight>
        <CyclesBeforeSync>2</CyclesBeforeSync>
        <JobPriority>5</JobPriority>
        <WeightPoints>
            <WeightPoint>
                <Offset>500</Offset>
                <Weight>1000</Weight>
            </WeightPoint>
            <WeightPoint>
                <Offset>3600</Offset>
                <Weight>100</Weight>
            </WeightPoint>
            <WeightPoint>
                <Offset>40000</Offset>
                <Weight>10</Weight>
            </WeightPoint>
        </WeightPoints>
        <StructureData>
            <StructureItem>
                <Type>ident</Type>
                <Device>Main Video Server</Device>
            </StructureItem>
            <StructureItem>
                <Type>trailer</Type>
                <Device>Main Video Server</Device>
            </StructureItem>
        </StructureData>
        <EnableFill>true</EnableFill>
        <ContinuityFill>
            <MinimumTime units="frames">125</MinimumTime>
            <EventAction>3</EventAction>
            <EventType>Fixed</EventType>
            <Device>Demo Video Device 1</Device>
            <EventData>
                <File>Continuity1</File>
            </EventData>
        </ContinuityFill>
    </PluginData>
</TarantulaPlugin>